{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",

      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",

      "Bash(task --list:*)",

      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git log:*)",

      "Bash(docker manifest inspect:*)",
      "Bash(docker ps:*)",
      "Bash(docker images:*)",
      "Bash(kubectl api-resources:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "Bash(talosctl containers:*)",
      "Bash(talosctl get:*)",
      "Bash(talosctl health:*)",
      "Bash(talosctl ls:*)",
      "Bash(talosctl read:*)",
      "Bash(talosctl version:*)",

      "mcp__github__get_*",
      "mcp__github__list_*",
      "mcp__github__search_*",
      "mcp__github__issue_read",
      "mcp__github__pull_request_read",

      "mcp__grafana__get_*",
      "mcp__grafana__list_*",
      "mcp__grafana__query_*",
      "mcp__grafana__search_*",
      "mcp__grafana__find_*",
      "mcp__grafana__fetch_*",
      "mcp__grafana__generate_deeplink",
      "mcp__grafana__find_*"
    ],
    "ask": ["mcp__grafana__update_dashboard"],
    "deny": ["Read(*.env)", "Read(talos/clusterconfig/*)", "Read(kubeconfig)"],
    "disableBypassPermissionsMode": "disable"
  }
}
